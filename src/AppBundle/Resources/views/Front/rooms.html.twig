{% extends '::base.html.twig' %}

{% block body %}
    <div class="rooms">
        <div class="row">
            <div class="col-md-offset-1 col-md-10">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="page-title">{{ 'page.rooms.list.title'|trans }} ({{ rooms|length }})</h1>
                    </div>
                </div>

                {% for room in rooms if room.open %}
                    <div class="row room-block">
                        <div class="col-md-4 nopadding">
                            {% if room.images|length > 0 %}
                                <img width="90%" src="{{ asset('uploads/rooms/' ~ (room.images|last).name) }}"
                                     alt="{{ room.images[0].name }}">
                            {% endif %}
                        </div>
                        <div class="col-md-6 nopadding">
                            <div class="room-summary">
                                <h3>{{ room.title }}</h3>

                                <div class="col-md-6 nopadding">
                                    <h4>{{ 'page.rooms.spec'|trans }}</h4>

                                    <div class="room-description">
                                        {{ room.description|raw|nl2br }}
                                    </div>
                                </div>
                                <div class="col-md-6 nopadding">
                                    <h4>{{ 'page.rooms.equipment'|trans }}</h4>

                                    <div class="room-equipment">
                                        {{ room.equipment|raw|nl2br }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 nopadding">
                            <h3 class="room-price">{{ room.price }}â‚¬/{{ 'page.rooms.night'|trans }}</h3>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
