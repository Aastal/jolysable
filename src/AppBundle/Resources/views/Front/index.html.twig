{% extends '::base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div id="main-row">
                <h1 class="main-title">Jolysable</h1>

                <p align="center" class="jolysable-desc">
                    Idéalement situé entre Royan, Cognac et Bordeaux, nos chambres vous apporteront le calme d'un coin
                    de nature au bord d'un étang de pêche. <br/>
                    Nous disposons de 4 chambres allant de 50 à 100€, toutes avec télé, wifi et plateau de complaisance.
                </p>
            </div>

            <!-- Partie gîte -->
            <div id="room-location">
                    <button class="home" data-value="room-location">
                        Retour
                    </button>

                    <div class="center-wrapper">
                        {% include "AppBundle:Front:rooms.html.twig" %}
                    </div>
            </div>

            <!-- Partie pêche -->
            <div id="fishing">
                <div class="filter">
                    <button class="home" data-value="fishing">
                        Retour
                    </button>

                    <div class="center-wrapper">
                        {% include "AppBundle:Front:informations.html.twig" %}
                    </div>
                </div>
            </div>

            <div id="bottom-page" class="row">
                <div class="col-md-6">
                    <div class="thumb thumbnail">
                        <li>
                            <figure>
                                <img src="{{ asset("assets/images/Exterieur.jpg") }}"
                                     class="lazy" title="section gîte">
                                <figcaption class="text-center">
                                    <h3 data-value="room-location">
                                        <span>Nos chambres</span>
                                    </h3>
                                </figcaption>
                                <div class="caption">
                                    <a href="#">
                                        <h3 align="center">Chambres</h3>
                                    </a>
                                </div>
                            </figure>
                        </li>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="thumb thumbnail">
                        <li>
                            <figure>
                                <img src="{{ asset("assets/images/Exterieur-etang.jpg") }}"
                                     class="lazy" title="section pêche">
                                <figcaption class="text-center">
                                    <h3 data-value="fishing">
                                        <span>Notre étang</span>
                                    </h3>
                                </figcaption>
                                <div class="caption">
                                    <a href="#">
                                        <h3 align="center">Pêche</h3>
                                    </a>
                                </div>
                            </figure>
                        </li>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}