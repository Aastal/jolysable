{% extends '::bo.html.twig' %}

{% block body %}
    <h1>Toutes les Réservations</h1>
    <hr>
    <a class="btn btn-animate btn-blue" href="">Créer une réservation</a>
    <hr>
    <div class="table-responsive">
        <table class="table table-striped table-index">
            <thead>
            <tr>
                <th>Id</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Nombre de personnes</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if entity %}
                {% for a in entity %}
                    <tr>
                        <td>
                            {{ a.id }}
                        </td>
                        <td>
                            {{ a.created | date('d/m/Y') }}
                        </td>
                        <td>
                            {{ a.updated | date('d/m/Y') }}
                        </td>
                        <td>
                            {{ a.title }}
                        </td>
                        <td>
                            {{ a.content }}
                        </td>
                        <td>
                            {{ a.updated | date_modify("+1 month") | date('d/m/Y') }}
                        </td>
                        <td>
                            {% if a.isActive %}
                                Oui
                            {% else %}
                                Non
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-animate btn-light-blue"
                               href="{{ path('admin.alerts.form.edit', { id : a.id }) }}">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td align="center" colspan="7">Aucune réservation</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}