{% extends '::bo.html.twig' %}

{% block body %}
    <h1>Toutes les Réservations</h1>
    <hr>
    <a class="btn btn-animate btn-blue" href="{{ path('admin.booking.new') }}">Créer une réservation</a>
    <hr>
    <div class="table-responsive">
        <table class="table table-striped table-index">
            <thead>
            <tr>
                <th>Id</th>
                <th>Dernière modification</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Nombre de personnes</th>
                <th>Statut de la demande</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if entity %}
                {% for a in entity %}
                    <tr>
                        <td>
                            {{ a.id }}
                        </td>
                        <td>
                            {{ a.updated | date('d/m/Y') }}
                        </td>
                        <td>
                            {{ a.customerName }}
                        </td>
                        <td>
                            {{ a.customerEmail }}
                        </td>
                        <td>
                            {{ a.nbCustomer }}
                        </td>
                        <td>
                            {% if a.isValidate %}
                                Validée
                            {% elseif a.isRefuse %}
                                Refusé
                            {% else %}
                                En Attente
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-animate btn-light-blue">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td align="center" colspan="7">Aucune réservation</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}