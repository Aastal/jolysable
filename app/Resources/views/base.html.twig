<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Jolysable{% endblock %}</title>

    {% stylesheets filter="scssphp" output="css/app.css"
    "assets/sass/*.scss" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link rel="icon" type="image/png" href="{{ asset('assets/images/Logo-mobile.png') }}">

    <script src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCvEYmhRsRVGqoYXKcQCO7ElImrgae_t1Y'></script>
    <script type='text/javascript'>
        function initialize() {
            var myOptions = {
                zoom: 12, center: new google.maps.LatLng(45.5819176, -0.5597321000000193),
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            map = new google.maps.Map(document.getElementById('gmap_canvas'), myOptions);
            marker = new google.maps.Marker({
                map: map,
                position: new google.maps.LatLng(45.5819176, -0.5597321000000193)
            });
            infowindow = new google.maps.InfoWindow({
                content: '<strong style="color: #000">Jolysable</strong><br>' +
                '<strong style="color: #000">14 rue des fontaines, Pons</strong><br>'
            });
            infowindow.open(map, marker);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
    </script>
</head>
<body>
<div id="main" class="container-fluid">
    {% block body %}{% endblock %}
</div>

{% javascripts filter="?jsqueeze" output="js/app.js"
"assets/vendor/jquery/dist/jquery.min.js"
"assets/vendor/jquery-ui/jquery-ui.min.js"
"assets/vendor/bootstrap/dist/js/bootstrap.min.js" %}
<script src="{{ asset_url }}"></script>

{% endjavascripts %}
</body>
</html>
