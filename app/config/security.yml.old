security:
    encoders:
        FOS\UserBundle\Model\UserInterface: sha512
        UserBundle\Entity\User: sha512

    role_hierarchy:
        ROLE_ADMIN:       ROLE_USER
        ROLE_SUPER_ADMIN: [ROLE_USER, ROLE_ADMIN, ROLE_ALLOWED_TO_SWITCH]

    providers:
        main:
            id: fos_user.user_provider.username_email

    firewalls:
        dev:
            pattern:  ^/{_locale}/(_(profiler|wdt)|css|images|js)/
            security: false

#        secured_area:
#            pattern: ^/admin
#            anonymous: false
#            form_login:
#                login_path: jolysable.admin.login
#                check_path: jolysable.admin.login
#            logout:
#                path: jolysable.admin.logout
#                target: jolysable.admin.login

        main:
            anonymous: ~
            http_basic: ~

    access_control:
        # Admin login page needs to be accessed without credential
        - { path: '^/admin/[^/]+/login$', role: IS_AUTHENTICATED_ANONYMOUSLY }
        - { path: '^/admin/[^/]+/check$', role: IS_AUTHENTICATED_ANONYMOUSLY }
        - { path: '^/admin/[^/]+/logout$', role: IS_AUTHENTICATED_ANONYMOUSLY }

        - { path: '^/admin', roles: ROLE_ADMIN }
        - { path: '^/', roles: IS_AUTHENTICATED_ANONYMOUSLY }
